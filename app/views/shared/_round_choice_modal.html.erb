<div class="modal fade round-choice-modal" id="roundChoice" tabindex="-1" role="dialog" aria-labelledby="roundChoiceTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content round-choice-modal-content" data-ninjaform-target="roundChoiceModal">
      <div class="modal-header round-choice-modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Number of rounds</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body round-choice round-choice-modal-body">
          <%= simple_form_for [current_user, @game], :html => {:"data-ninjaform-target" => "form", :"data-friend-target" => "form"} do |f| %>
            <%= f.input :round_count, as: :radio_buttons, collection: [[1, '⚔️'], [3, "⚔️ ⚔️ ⚔️"], [5, "⚔️ ⚔️ ⚔️ ⚔️ ⚔️"]], label_method: :second, value_method: :first, label: '', class: 'form-check-inline', :input_html => { :"data-action" => "change->ninjaform#submitForm"} %>
          <% end %>
      </div>
    </div>
  </div>
</div>
