<h1>Dashboard</h1>
<div class="d-flex">
<div class="dashboard_leaderboard">
<h2>Leaderboard</h2>
<table>
  <tbody>
    <tr>
      <th>Position</th>
      <th>User</th>
      <th>Score</th>
    </tr>
    <% count = 1 %>
    <% @users_ordered_by_score.each do |user| %>
      <tr>
        <td>#<%= count %></td>
        <td>
          <div><%= image_tag(user.avatar, height: '40') %></div>
          <div><%= user.username %></div>
        </td>
        <td><%= user.score %></td>
      </tr>
    <% count += 1 %>
    <% end  %>
  </tbody>
</table>

<%= link_to "Start game",  new_user_game_path(current_user), class: "btn btn-main" %>
</div>
<div class="dashboard_friendslist">
<h2>Friendslist</h2>
<table>
  <tbody>
    <tr>
      <th>NÂ°</th>
      <th>Username</th>
      <th>Avatar</th>
    </tr>
    <% count = 1 %>
    <% @friendships.each do |f| %>
      <tr>
        <td>#<%= count %></td>
        <td>

          <div><%= f.receiver.username %></div>
        </td>
        <td>
        <%= link_to image_tag(f.receiver.avatar, height: '40'), user_path(f.receiver)%></td>
      </tr>
    <% count += 1 %>
    <% end  %>
  </tbody>
</table>
</div>
</div>
