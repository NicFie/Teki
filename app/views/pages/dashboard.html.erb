<h1>Hello</h1>

<ul>
  <% User.all.each do |user| %>
    <li><%= user.username%></li>
  <% end %>
</ul>

<table>
  <tbody>
    <tr>
      <th>Position</th>
      <th>User</th>
      <th>Score</th>
    </tr>
    <% count = 1 %>
    <% User.all.each do |user| %>
      <tr>
        <td>#<%= count %></td>
        <td>
          <div><%= image_tag(user.avatar) %></div>
          <div><%= user.username %></div>
        </td>
        <td><%= user.score %></td>
      </tr>
    <% count += 1 %>
    <% end  %>
  </tbody>
</table>
