<h2>Leaderboard</h2>
<table class="leaderboard">
  <tbody>
    <tr>
      <th>Rank</th>
      <th>Player</th>
      <th>Score</th>
    </tr>
    <% User.leader_board.each_with_index do |user, index| %>
      <tr class="leaderboard-user">
        <td>#<%= index + 1 %></td>
        <td>
          <%= link_to image_tag(user.avatar, height: '40'), user_path(user) %>
          <%= link_to user.username, user_path(user) %>
        </td>
        <td><%= user.score %></td>
      </tr>
    <% end  %>
  </tbody>
</table>

